<Window x:Class="RealTimeInventoryTracker.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RealTimeInventoryTracker.WPF"
        xmlns:controls="clr-namespace:RealTimeInventoryTracker.WPF.UserControls"
        mc:Ignorable="d"
        Title="Real-Time Inventory Tracking" 
        Height="400"
        Width="700"
        Background="#f9f9f9" WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Border
            Width="501"
            Padding="30"
            Background="White"
            CornerRadius="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            >
            <StackPanel
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                >
                <TextBlock
                    Text="Welcome"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="#2C3E50"
                    Margin="0,0,0,10"
                    TextAlignment="Center"
                    />
                <TextBlock
                    Text="to"
                    FontSize="22"
                    Foreground="#34495E"
                    Margin="0,0,0,5"
                    TextAlignment="Center"                   
                    />
                <TextBlock
                    Text="Real Time Inventory Tracker"
                    FontSize="30"
                    FontWeight="SemiBold"
                    Foreground="#2980B9"
                    TextAlignment="Center"
                    Margin="0,0,0,20"
                    />

                <controls:ButtonControl
                    ButtonContent ="Track Inventory"
                    x:Name="EnterButton"
                    />

                <TextBlock
                    Text="Manage Products in Inventory"
                    HorizontalAlignment="Center"
                    Foreground="Blue"
                    FontWeight="SemiBold"
                    FontSize="11"
                    x:Name="ManageProducts"
                    />
            </StackPanel>
        </Border>
    </Grid>
</Window>
